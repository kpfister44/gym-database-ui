{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist/js",
      "rootDir": "./src/ts",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/ts/**/*"]
  }
  